<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".owner_profile">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profilefixed"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center"
        app:civ_border_color="@color/peach"
        app:civ_border_width="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101"
        app:srcCompat="@drawable/profilephoto" />

    <TextView
        android:id="@+id/editprof"
        android:layout_width="343dp"
        android:layout_height="45dp"
        android:background="@drawable/black_border_box"
        android:gravity="center|left"
        android:text="Edit Profile"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilefixed"
        app:layout_constraintVertical_bias="0.187" />

    <TextView
        android:id="@+id/mproducts"
        android:layout_width="343dp"
        android:layout_height="45dp"
        android:background="@drawable/black_border_box"
        android:gravity="center|left"
        android:text="My Products"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilefixed"
        app:layout_constraintVertical_bias="0.509" />

    <TextView
        android:id="@+id/logoutp"
        android:layout_width="343dp"
        android:layout_height="45dp"
        android:background="@drawable/black_border_box"
        android:gravity="center|left"
        android:text="Logout"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilefixed"
        app:layout_constraintVertical_bias="0.793" />


</androidx.constraintlayout.widget.ConstraintLayout>